{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "types": [
            "@nodecg/types/augment-window"
        ],
        "paths": {
            "types/*": [
                "src/types/*"
            ],
            "client-shared/*": [
                "src/client-shared/*"
            ],
            "schemas": [
                "../ipl-overlay-controls/src/types/schemas/index"
            ],
            "relay-nodecg-connector": [
                "../relay-nodecg-connector/src/types/schemas/index"
            ]
        }
    }
}
