{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "types": [
            "@nodecg/types/augment-window"
        ],
        "paths": {
            "types/*": [
                "src/types/*"
            ],
            "client-shared/*": [
                "src/client-shared/*"
            ],
            "assets/*": [
                "src/assets/*"
            ],
            "img/*": [
                "src/assets/img/*"
            ],
            "schemas": [
                "../ipl-overlay-controls/src/types/schemas/index"
            ]
        }
    },
    "include": [
        "src/dashboard/**/*.ts",
        "src/dashboard/**/*.vue",
        "src/graphics/**/*.ts",
        "src/graphics/**/*.vue",
        "src/client-shared/**/*.ts",
        "src/types/**/*.ts"
    ]
}
